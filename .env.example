# Hot Module Replacement Configuration
# Copy this to .env or set these environment variables

# HMR Host - Browser connection address
# Use: localhost (Docker Desktop)
# Use: host.docker.internal (WSL2)
VITE_HMR_HOST=localhost

# HMR Port - WebSocket port for updates
VITE_HMR_PORT=5173

# HMR Protocol - WebSocket protocol
# Options: ws (insecure), wss (secure SSL/TLS)
VITE_HMR_PROTOCOL=ws

# Development environment flag
NODE_ENV=development

# Vite dev server host (listen address)
# 0.0.0.0 = all interfaces (required for Docker)
VITE_HOST=0.0.0.0

# Vite dev server port
VITE_PORT=5173
